{
  "name": "@botforge/widget",
  "version": "1.0.0",
  "type": "module",
  "description": "Official BotForge chatbot widget for easy integration into any website or web application",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "chatbot",
    "widget",
    "customer-support",
    "ai",
    "chat",
    "botforge",
    "react",
    "vue",
    "angular",
    "vanilla-js"
  ],
  "author": "BotForge Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/botforge/widget.git"
  },
  "homepage": "https://botforge.site",
  "bugs": {
    "url": "https://github.com/botforge/widget/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "rollup": "^4.9.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "framer-motion": "^10.16.16"
  },
  "directories": {
    "example": "examples"
  }
}
